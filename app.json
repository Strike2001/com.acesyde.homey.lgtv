{
  "id": "com.acesyde.homey.lgtv",
  "version": "0.0.1",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "name": {
    "en": "LGTV WebOS"
  },
  "description": {
    "en": "Support for LGTV WebOS"
  },
  "category": [
    "video"
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Pierre-Emmanuel Mercier",
    "email": "acesyde@gmail.com"
  },
  "drivers": [
    {
      "id": "webos",
      "name": {
        "en": "WebOS"
      },
      "class": "tv",
      "capabilities": [
        "channel_down",
        "channel_up",
        "volume_set",
        "onoff",
        "volume_down",
        "volume_mute",
        "volume_up"
      ],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_my_devices"
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices"
        }
      ],
      "images": {
        "large": "/drivers/webos/assets/images/large.png",
        "small": "/drivers/webos/assets/images/small.png"
      }
    }
  ]
}